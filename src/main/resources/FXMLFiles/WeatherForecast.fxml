<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root fx:id="weatherForecastHBox" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <AnchorPane fx:id="weatherForecastAnchorPane" prefHeight="200.0" prefWidth="200.0">
      <children>
      <Pane prefHeight="550.0" prefWidth="385.0" style="-fx-background-color: #0077B6;">
         <children>
            <Label fx:id="dateLabel" layoutX="128.0" layoutY="122.0" prefHeight="17.0" prefWidth="133.0" text="Piątek, 29.07.2023" textFill="#eeeeee">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Label>
            <ImageView fx:id="weatherIcon" fitHeight="129.0" fitWidth="144.0" layoutX="123.0" layoutY="174.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="temperatureLabel" alignment="CENTER" layoutX="132.0" layoutY="340.0" prefHeight="48.0" prefWidth="124.0" text="21°C" textFill="WHITE">
               <font>
                  <Font name="Arial" size="40.0" />
               </font>
            </Label>
            <GridPane layoutX="57.0" layoutY="415.0" opacity="0.86" prefHeight="85.0" prefWidth="275.0" style="-fx-background-color: #00B4D8; -fx-background-radius: 10px;">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label fx:id="pressureLabel" text="Ciśnienie: 1013 hPa" textFill="WHITE">
                     <GridPane.margin>
                        <Insets left="8.0" />
                     </GridPane.margin>
                  </Label>
                  <Label fx:id="windSpeedLabel" text="Wiatr: 31 km/h" textFill="WHITE" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets left="8.0" />
                     </GridPane.margin>
                  </Label>
                  <Label fx:id="cloudinessLabel" text="Zachmurzenie: 91%" textFill="WHITE" GridPane.columnIndex="1">
                     <GridPane.margin>
                        <Insets left="8.0" />
                     </GridPane.margin>
                  </Label>
                  <Label fx:id="humidityLabel" text="Wilgotność: 84%" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets left="8.0" />
                     </GridPane.margin>
                  </Label>
               </children>
            </GridPane>
            <VBox layoutX="345.0" layoutY="18.0" prefHeight="40.0" prefWidth="26.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="32.0" prefWidth="25.0" text="x" textFill="WHITE">
                     <font>
                        <Font size="22.0" />
                     </font>
                  </Label>
                  <ImageView fx:id="editMainButton" fitHeight="28.0" fitWidth="26.0" onMouseClicked="#editMainButton" pickOnBounds="true" preserveRatio="true" />
               </children>
            </VBox>
            <Label fx:id="cityNameLabel" alignment="CENTER" layoutX="57.0" layoutY="59.0" prefHeight="55.0" prefWidth="275.0" text="Miasto" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="26.0" />
               </font>
            </Label>
               <Label fx:id="descriptionLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="133.0" layoutY="303.0" text="słabe opady deszczu" textFill="WHITE">
                  <font>
                     <Font size="13.0" />
                  </font></Label>
         </children>
      </Pane>
      </children>
      <HBox.margin>
         <Insets />
      </HBox.margin>
   </AnchorPane>
</fx:root>
