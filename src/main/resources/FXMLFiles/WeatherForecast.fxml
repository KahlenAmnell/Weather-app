<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root fx:id="weatherForecastHBox" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <AnchorPane fx:id="weatherForecastAnchorPane" prefHeight="200.0" prefWidth="200.0">
      <children>
      <Pane prefHeight="550.0" prefWidth="385.0" style="-fx-background-color: #0077B6;">
         <children>
            <VBox layoutX="66.0" layoutY="48.0" prefHeight="85.0" prefWidth="253.0">
               <children>
                  <Label fx:id="mainCountryNameLabel" alignment="CENTER" prefHeight="37.0" prefWidth="275.0" text="Państwo" textFill="WHITE">
                     <font>
                        <Font name="Arial" size="18.0" />
                     </font>
                  </Label>
                  <Label fx:id="mainCityNameLabel" alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="55.0" prefWidth="275.0" text="Miasto" textFill="WHITE">
                     <font>
                        <Font name="Arial Bold" size="26.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <Label fx:id="mainCityDateLabel" layoutX="42.0" layoutY="144.0" prefHeight="17.0" prefWidth="133.0" text="Piątek, 29.07.2023" textFill="#eeeeee">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Label>
            <ImageView fx:id="mainCityWeatherIcon" fitHeight="129.0" fitWidth="144.0" layoutX="121.0" layoutY="194.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="mainCityTemperatureLabel" alignment="CENTER" layoutX="132.0" layoutY="340.0" prefHeight="48.0" prefWidth="124.0" text="21°C" textFill="WHITE">
               <font>
                  <Font name="Arial" size="40.0" />
               </font>
            </Label>
            <GridPane layoutX="57.0" layoutY="415.0" opacity="0.86" prefHeight="85.0" prefWidth="275.0" style="-fx-background-color: #00B4D8; -fx-background-radius: 10px;">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label fx:id="mainNightTemperatureLabel" text="Noc: 15" textFill="WHITE">
                     <GridPane.margin>
                        <Insets left="8.0" />
                     </GridPane.margin>
                  </Label>
                  <Label fx:id="mainWindSpeedLabel" text="Wiatr: 31 km/h" textFill="WHITE" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets left="8.0" />
                     </GridPane.margin>
                  </Label>
                  <Label fx:id="mainPrecipitationProbabilityLabel" text="Szansa opadów: 91%" textFill="WHITE" GridPane.columnIndex="1">
                     <GridPane.margin>
                        <Insets left="8.0" />
                     </GridPane.margin>
                  </Label>
                  <Label fx:id="mainHumidityLabel" text="Wilgotność: 84%" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets left="8.0" />
                     </GridPane.margin>
                  </Label>
               </children>
            </GridPane>
            <VBox layoutX="345.0" layoutY="18.0" prefHeight="40.0" prefWidth="26.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="32.0" prefWidth="25.0" text="x" textFill="WHITE">
                     <font>
                        <Font size="22.0" />
                     </font>
                  </Label>
                  <ImageView fx:id="editMainButton" fitHeight="28.0" fitWidth="26.0" onMouseClicked="#editMainButton" pickOnBounds="true" preserveRatio="true" />
               </children>
            </VBox>
         </children>
      </Pane>
      </children>
      <HBox.margin>
         <Insets />
      </HBox.margin>
   </AnchorPane>
</fx:root>
